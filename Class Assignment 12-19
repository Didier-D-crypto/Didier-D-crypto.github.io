//Javascript Below//

$(document).ready(function () {
    $("#search").on("click", function () {
      var query = $("#queryValue").val();
      var key = "H4xJcaB6EHUAahPgX7T1Yg7zZyrJ4luB";
      var queryURL = "https://api.nytimes.com/svc/search/v2/articlesearch.json?q=" + query + "&api-key=" + key;
      $.ajax({
        url: queryURL,
        method: "GET"
      })
        .then(function (response) {
          var articleArray = response.response.docs;
          for (var i = 0; i < articleArray.length; i++) {
            var article = $('<li>');
            var articleLink = $('<a>');
            var url = articleArray[i].web_url;
            articleLink.attr("href", url);
            articleLink.attr("target", "_blank");
            var headline = articleArray[i].headline.main;
            articleLink.text(headline);
            article.append(articleLink)
            $('#articleList').append(article);
          }
        });
    });
});












Message Adrian Romero, Max Kulicke, Nicholas McConnell, Didier Delphin


